<h1>Shopping Cart</h1>
<h2>Items in Cart: <%= @cart.count %> </h2>
<div class='cart-contents'>
  <ul>
    <% @trips.each do |trip| %>
      <li><%= @cart.num_of_trip_in_cart(trip.id) %>
        - <%= trip.title %> -
        $<%= '%.2f' % @cart.total_price_of_trip(trip.id) %>
        <%= link_to 'Edit Quantity', cart_edit_path(trip_id: trip.id) %>
        <%= link_to 'Remove', cart_path(trip_id: trip.id), method: :delete %></li>
    <% end %>
  </ul>
  <% unless @cart.total_price.zero? %>
    Total: $<%= '%.2f' % @cart.total_price %>
  <% end %>
</div>
<div class='checkout'>
  <%= display_checkout %>
</div>
