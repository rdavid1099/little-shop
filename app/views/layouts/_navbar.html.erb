<div class='wrapper navbar navbar-default'>
  <div class='container-fluid'>
    <div class='navbar-header'>
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
     <span class="sr-only">Toggle navigation</span>
     <span class="icon-bar"></span>
     <span class="icon-bar"></span>
     <span class="icon-bar"></span>
   </button>
      <a class='navbar-brand' href='/'>
        <span class='glyphicon glyphicon-send' aria-hidden ='true'></span>
        No Refunds Travel
      </a>
    </div>
    <div class ='collapse navbar-collapse' id='bs-example-navbar-collapse-1'>
      <% if current_user && current_user.admin? %>
        <ul class='nav navbar-nav'>
          <li><%= link_to 'All Trips', admin_trips_path %></li>
          <li><%= link_to 'Create New Trip', new_admin_trip_path %></li>
          <li class='dropdown'>
            <a href='#' class='dropdown-toggle' data-toggle='dropdown' role='button' aria-haspopup='true' aria-expanded='false'>Browse by Categories<span class='caret'></span></a>
            <ul class='dropdown-menu'>
              <li><%= link_to 'Create New Category', new_admin_category_path %></li>
              <li><%= link_to 'Edit Categories', admin_categories_path %></li>
              <li role="separator" class="divider"></li>
              <%= render partial: 'layouts/categories' %>
            </ul>
          </li>
        </ul>
      <% else %>
        <ul class='nav navbar-nav'>
          <li><%= link_to 'All Trips', trips_path %></li>
          <li class='dropdown'>
            <a href='#' class='dropdown-toggle' data-toggle='dropdown' role='button' aria-haspopup='true' aria-expanded='false'>Browse by Categories<span class='caret'></span></a>
            <ul class='dropdown-menu'>
              <%= render partial: 'layouts/categories' %>
            </ul>
          </li>
        </ul>
      <% end %>
      <ul class='nav navbar-nav navbar-right'>
        <li><a class='navbar-brand' href='/cart'>
          <span class='glyphicon glyphicon-shopping-cart' aria-hidden ='true'></span>
          <% unless @cart.count.zero? %>
            <span class="badge"> <%= @cart.count %> </span>
          <% end %>
        </a></li>
        <%= render partial: 'layouts/login' %>
      </ul>
    </div>
  </div>
</div>
